<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.braille.os">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PhoneActivity" />
        <activity android:name=".MessageActivity" />
        <activity android:name=".MessageUnreadActivity" />
        <activity android:name=".KeyboardInputActivity" />
        <activity android:name=".MessageConvoActivity" />
        <activity android:name=".KeyboardInputNumberActivity"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="7c3a9b7d6af66f46b8e23a27cc2d844567d6ff70" />

        <activity android:name=".TwitterActivity" />
        <activity android:name=".TwitterFeedActivity" />
    </application>

</manifest>